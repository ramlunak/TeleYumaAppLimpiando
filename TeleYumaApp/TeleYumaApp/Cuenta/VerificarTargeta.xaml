                            <StackLayout Grid.Row="1">
                                <ActivityIndicator IsRunning="True" IsVisible="True"/>
                                <Label Text="Por favor espere un momento la aplicación le está enviando la autorización de cobro."/>
                            </StackLayout>
                        </Grid>-->
                    </StackLayout>
                    
                    <StackLayout x:Name="layoutContenido" HorizontalOptions="CenterAndExpand" IsVisible="True">
                        <Label x:Name="lblMonto"></Label>
                       
                        <Frame x:Name="frameIntentoFallido" IsVisible="False"  >
                            <StackLayout Orientation="Horizontal">
                                <Image Source="errordecmprobacion" WidthRequest="60"/>
                                <StackLayout Margin="5">
                                    <Label FontSize="16" TextColor="Red" Text="El valor no corresponde"/>
                                    <Label FontSize="14" TextColor="Gray" Text="(Por seguridad su cuenta de TeleYuma será bloqueada si falla mas una vez)"/>
                                </StackLayout>
                                  </StackLayout>
                        </Frame>

                        <Frame x:Name="frameComprovacionCorrecta" IsVisible="False"  >
                            <StackLayout Orientation="Horizontal">
                                <Image Source="comprobacioncorrecta" WidthRequest="70"/>
                                <StackLayout Margin="5">
                                    <Label FontSize="16" TextColor="Green" Text="Felicidades!!!"/>
                                    <Label FontSize="14" TextColor="Black" Text="Ha verificado su tarjeta, gracias por utilizar nuestros servicios"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>

                        <!--<Frame x:Name="frameComprovacionCorrecta" IsVisible="True" BackgroundColor="Green" Padding="3">
                            <Label FontSize="15" TextColor="White" Text="Su cuenta ha sido verificada correctamente,gracias por utilizar nuestros servicios"/>
                        </Frame>-->
                        <Frame x:Name="frameFormulario" HorizontalOptions="Center" Margin="10">
                       
                          
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">

                                <Label Text="Valor total" TextColor="Black" FontSize="16" VerticalTextAlignment="Center" Margin="10"/>

                                <control:entry  Grid.Column="0" IsEnabled="False" LineColor="Gray" Placeholder="0." PlaceholderColor="Gray" HorizontalOptions="FillAndExpand"/>
             
                                <custom:CustomEntry Grid.Column="1"  x:Name="txtUnidad"  LineColor="Gray"  Placeholder="0"   WidthRequest="40"   TextChanged="txtUnidadTextChanged"                      
                                  Keyboard="Numeric"  PlaceholderColor="Gray"   HorizontalOptions="FillAndExpand"/>
                                                                    
                                <custom:CustomEntry Grid.Column="2"    x:Name="txtDecena"     Placeholder="0"   Keyboard="Numeric"    TextChanged="txtDecenaTextChanged"                          
                                           WidthRequest="40"  LineColor="Gray"    PlaceholderColor="Gray"  HorizontalOptions="FillAndExpand"/>                                             
                           
                                <ActivityIndicator  Grid.Column="3"     x:Name="loadinComprobando"     IsRunning="True"  IsVisible="False"/> 
                                
                            </StackLayout>  
                                                           
                                                     
