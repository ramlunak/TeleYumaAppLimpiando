                                </rlk:rlkStackLayoutButton>-->

                            </Grid>

                        </StackLayout>

                        <StackLayout  VerticalOptions="Center"  BackgroundColor="OrangeRed">
                            <Label Margin="15" Text="CANCELAR" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                        </StackLayout>

                    </StackLayout>


                </StackLayout>

            </ContentView>

            <ContentView IsVisible="{Binding OpcionesRecargaVisible}" x:Name="popupOpcionesRecarga"  BackgroundColor="#C0808080" Padding="0"  AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" >

                <StackLayout BackgroundColor="White"  WidthRequest="250" VerticalOptions="Center" HorizontalOptions="Center" Spacing="0" Padding="0" Margin="15">
                    <Frame CornerRadius="5" Padding="10">
                        <StackLayout Padding="0" Margin="0">

                            <Image Source="ok" Margin="10" WidthRequest="50" HeightRequest="50"/>
                            <Label Text="RECARGA AGREGADA AL CARRITO" TextColor="Black" FontSize="12" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                            <BoxView BackgroundColor="Gray" HeightRequest="1"/>
                            <StackLayout>
                                <Button x:Name="btnNew" BackgroundColor="#04389A" Text="Agregar otra" TextColor="White" Clicked="btnNew_Clicked"/>
                                <Button x:Name="btnPagar" BackgroundColor="#239B05" Text="Pagar ahora" Clicked="btnPagar_Clicked" TextColor="White"/>
                            </StackLayout>

                        </StackLayout>

                    </Frame>
                </StackLayout>

            </ContentView>

            <ContentView IsVisible="{Binding ListaPrecios}" x:Name="popupOpcionesProductos"  BackgroundColor="#A5252528" Padding="0"  AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" >

                <StackLayout Margin="10">
                    <Button Text="x" HorizontalOptions="End" BackgroundColor="OrangeRed" WidthRequest="40" Margin="5" TextColor="White" FontSize="20" Clicked="TapGestureRecognizer_Tapped_2"/>
                    <ListView 
                    ItemsSource="{Binding PreciosProductos}"
                      HasUnevenRows="True"         
                       
                      SelectedItem="{Binding PrecioSelected}"                       
                      IsPullToRefreshEnabled="False"
                      CachingStrategy="RecycleElement"
                      SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame CornerRadius="5" Padding="10" Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*"/>
                                                <ColumnDefinition Width="40*"/>
                                                <ColumnDefinition Width="30*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackLayout Grid.Column="0" HorizontalOptions="StartAndExpand">
                                                <Label Text="Enviá" FontAttributes="Bold" FontSize="14"/>
                                                <Label Text="{Binding MinValue,StringFormat='{0:F} USD'}" FontSize="14" TextColor="Goldenrod" FontAttributes="Bold"/>
                                            </StackLayout>

                                            <StackLayout Grid.Column="1" HorizontalOptions="CenterAndExpand">
                                                <Image Source="movil2" WidthRequest="30" />
                                                <Label Text="{Binding Name}" TextColor="Blue"  HorizontalTextAlignment="Center" />
                                            </StackLayout>

                                            <StackLayout Grid.Column="2" HorizontalOptions="EndAndExpand">
                                                <Label Text="Recibe" FontAttributes="Bold" FontSize="14" />
                                                <Label Text="{Binding DisplayText}" FontSize="14" TextColor="Goldenrod" FontAttributes="Bold"/>
                                            </StackLayout>

                                        </Grid>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Behaviors>
                            <behaviors:EventToCommandBehavior EventName="ItemSelected" Command="{Binding PrecioProducoSelectCommand}"/>
                        </ListView.Behaviors>
                    </ListView>
                </StackLayout>

            </ContentView>

            <ContentView IsVisible="{Binding OpcionesCargandoVisible}" x:Name="popupOpcionesCargando"  BackgroundColor="#C0808080" Padding="0"  AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" >

                <StackLayout BackgroundColor="Transparent"  WidthRequest="250" VerticalOptions="Center" HorizontalOptions="Center" Spacing="0" Padding="0" Margin="15">

                    <StackLayout Padding="0" Margin="0">

                        <ActivityIndicator IsRunning="True" Color="Orange"/>
                        <Label Text="Verificando los datos..." TextColor="White" FontSize="12" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

                    </StackLayout>

                </StackLayout>

            </ContentView>

        </AbsoluteLayout>
    </ScrollView>
</ContentPage>
    